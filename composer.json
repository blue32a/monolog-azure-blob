{
    "name": "blue32a/monolog-azure-blob",
    "description": "Azure Blob Storage Handler for Monolog",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "blue32a",
            "email": "blue32a.jp@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "monolog/monolog": ">=1.24 <=2.1",
        "microsoft/azure-storage-blob": "^1.5"
    },
    "require-dev": {
        "blue32a/php-coding-standard": "v0.3.0-alpha",
        "mockery/mockery": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Blue32a\\Monolog\\Handler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/parallel-lint --no-progress --exclude vendor .",
        "cs": "vendor/bin/phpcs",
        "cbf": "vendor/bin/phpcbf",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
